package testPackage;

class Balance{
		String name;
		double bal;
		
		Balance (String n,double b){
			name = n;
			bal = b;}
			
			void show(){
				if(bal<0){
					System.out.println("-->");
					System.out.println(name + ": $" +bal);
				}
			
		}
}

public class Package {
           public static void main(String args[]){
        	   Balance blnc[] = new Balance[3];
        	   
        	   blnc[0] = new Balance("kanetkar",100);
        	   blnc[1] = new Balance("herbart shcild",200);
        	   blnc[2] = new Balance("taohid",000);
        	   
        	   for(int i = 0;i<3;i++){
        		   blnc[i].show();
        	   }
           }
}
